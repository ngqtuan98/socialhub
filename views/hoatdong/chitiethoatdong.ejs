  <section class="hero-wrap hero-wrap-2" style="background-image: url('<%= findHDImage %>');"
    data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text align-items-end justify-content-center">
        <div class="col-md-9 ftco-animate pb-5 text-center">
          <h1 class="mb-2 bread">CHI TIẾT HOẠT ĐỘNG <br><%= findHDTenHD %></h1>
          <p class="breadcrumbs"><span class="mr-2"><a href="/hoatdong">Hoạt dộng<i
                  class="ion-ios-arrow-forward"></i></a></span> <span>Chi tiết hoạt dộng <i
                class="ion-ios-arrow-forward"></i></span></p>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section bg-light">
    <div class="container">
      <% if(flagdk==1 && soNguoiDK > 0){ %>
      <div class="row d-flex sermon-wrap">
        <div class="col-md-6 d-flex align-items-stretch ftco-animate">
          <div class="img" style="background-image: url('<%= findHDImage %>');"></div>
        </div>
        <div class="col-md-6 py-4 text ftco-animate">

          <h2 class="mb-4"><a href="sermon.html"><%= findHDTenHD %></a></h2>
          <div class="meta">
            <p>
              <span>Số lượng còn: <a style="color: black"><%= soNguoiDK %></a></span>
              <span>Thời gian: <a style="color: black">Từ <%= TGDR %> đến
                  <%=TGKT %><a></span>
            </p>
          </div>
          <p>Nội dung: <a style="color: black"><%= findHDND %></a></p>
          <p class="mt-4 btn-customize">
            <!--<a href="https://vimeo.com/45830194" class="btn btn-primary px-4 py-3 mr-md-2 popup-vimeo"></a>
                <span class="icon-play"></span> Watch Sermons</a>-->
            <a style="color: crimson">BẠN ĐÃ ĐĂNG KÝ THÀNH CÔNG</a>
          </p>
        </div>
      </div>
      <% } %>
      <% if(flagdk==0 && soNguoiDK > 0){ %>
      <div class="row d-flex sermon-wrap">
        <div class="col-md-6 d-flex align-items-stretch ftco-animate">
          <div class="img" style="background-image: url('<%= findHDImage %>');"></div>
        </div>
        <div class="col-md-6 py-4 text ftco-animate">

          <h2 class="mb-4"><a href="sermon.html"><%= findHDTenHD %></a></h2>
          <div class="meta">
            <p>
              <span>Số người đăng ký: <a style="color: black"><%= soNguoiDK %></a></span>
              <span>Thời gian: <a style="color: black">Từ <%= TGDR %> đến
                  <%=TGKT %><a></span>
            </p>
          </div>
          <p>Nội dung: <a style="color: black"><%= findHDND %></a></p>
          <p class="mt-4 btn-customize">
            <!--<a href="https://vimeo.com/45830194" class="btn btn-primary px-4 py-3 mr-md-2 popup-vimeo"><span class="icon-play"></span> Watch Sermons</a> -->
            <a href="/chitiethoatdong/dangkyhoatdong/<%= findHDId %>" class="btn btn-black px-4 py-3 ml-lg-2"><span
                class="icon-submit"></span>ĐĂNG KÝ</a>
          </p>
        </div>
      </div>
      <% } %>
      <% if(soNguoiDK <= 0){ %>
      <div class="row d-flex sermon-wrap">
        <div class="col-md-6 d-flex align-items-stretch ftco-animate">
          <div class="img" style="background-image: url('<%= findHDImage %>');"></div>
        </div>
        <div class="col-md-6 py-4 text ftco-animate">

          <h2 class="mb-4"><a href="sermon.html"><%= findHDTenHD %></a></h2>
          <div class="meta">
            <p>
              <span>Số lượng còn: <a style="color: red">Full</a></span>
              <span>Thời gian: <a style="color: black">Từ <%= TGDR %> đến
                  <%=TGKT %><a></span>
            </p>
          </div>
          <p>Nội dung: <a style="color: black"><%= findHDND %></a></p>
          <p class="mt-4 btn-customize">
            <!--<a href="https://vimeo.com/45830194" class="btn btn-primary px-4 py-3 mr-md-2 popup-vimeo"><span class="icon-play"></span> Watch Sermons</a> -->
            <a>
              <h4 style="color: crimson">ĐÃ FULL</h4>
            </a>
          </p>
        </div>
      </div>
      <% } %>
    </div>
  </section>
  <div class="elfsight-app-f936ed30-b91e-4d21-90a8-f06a6bb16b83"></div>
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-12 text-center heading-section ftco-animate">
          <h2 class="mb-2"><span class="px-4">Hoạt động khác</span></h2>
        </div>
      </div>
      <div class="row">
        <% for(var i=0; i < hoatdongChunks.length; i++) {%>
        <div class="col-md-4">
          <div class="sermon-wrap sermon-wrap-2 mb-4 ftco-animate">
            <a href="/chitiethoatdong/<%= hoatdongChunks[i].Id %>" class="img"
              style="background-image: url('<%= hoatdongChunks[i].image %>');"></a>
            <div class="text p-4 bg-light text-center">
              <h2 class="mb-3"><a style="color: black"><%= hoatdongChunks[i].tenHD %></a></h2>
              <div class="meta">
                <p>
                  <% if(hoatdongChunks[i].soNguoiDK > 0){ %>
                  <span class="mr-2">Số người đăng ký: <a
                      style="color: black"><%= hoatdongChunks[i].soNguoiDK %></a></span>
                  <% } %>
                  <% if(hoatdongChunks[i].soNguoiDK <= 0){ %>
                  <span class="mr-2">Số người đăng ký: <a style="color:red">Full</a></span>
                  <% } %>
                  <span>Thời gian: <a style="color: black">Từ <%= hoatdongChunks[i].TGDR %> đến
                      <%= hoatdongChunks[i].TGKT %></a></span>
                </p>
              </div>
              <p class="">
                <a href="/chitiethoatdong/<%= hoatdongChunks[i].Id %>" class="btn-custom p-2 text-center"><span
                    class="icon-book"></span> Chi tiết</a>
              </p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
  </section>
